[
  {
    "urlPattern": ".*chat\\.deepseek\\.com.*",
    "actions": [
      {
        "action": "mermaid-render",
        "selector": ".md-code-block.language-mermaid pre",
        "preSelector": "t(.md-code-block .md-code-block-infostring) = 'mermaid' ? 'add-css:.md-code-block:language-mermaid'",
        "customStyle": ".md-code-block{background:#fafafa;border:1px solid rgba(0,0,0,0.08);}\n.md-code-block .md-code-block-banner-wrap{background:none;}\n.md-code-block .md-code-block-banner{background:#f4f4f4;color:rgba(0,0,0,0.9);}\n"
      },
      {
        "selector": ".markdown-body",
        "action": "html-to-markdown",
        "unnecessarySelector": [".md-code-block-banner"]
      }
    ]
  },
  {
    "urlPattern": ".*yuanbao\\.tencent\\.com.*",
    "actions": [
      {
        "selector": "pre > code.language-mermaid",
        "action": "mermaid-render"
      },
      {
        "selector": ".md",
        "action": "html-to-markdown",
        "unnecessarySelector": [".hyc-common-markdown__code__hd"]
      }
    ]
  }
]
