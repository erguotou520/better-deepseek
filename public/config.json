[
  {
    "urlPattern": ".*chat\\.deepseek\\.com.*",
    "actions": [
      {
        "selector": ".md-code-block.language-mermaid pre",
        "preSelector": "t(.md-code-block .md-code-block-infostring) = 'mermaid' ? 'add-css:.md-code-block:language-mermaid'",
        "action": "mermaid-render"
      },
      {
        "selector": ".markdown-body",
        "action": "html-to-markdown"
      }
    ]
  },
  {
    "urlPattern": ".*yuanbao\\.tencent\\.com.*",
    "actions": [
      {
        "selector": "pre > code.language-mermaid",
        "action": "mermaid-render"
      },
      {
        "selector": ".md",
        "action": "html-to-markdown"
      }
    ]
  }
] 